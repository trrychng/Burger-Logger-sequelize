<div class="container">

<div class="row">
<div class="col-lg-12">
<h1 id="burgerTitle">The Burger Logger!</h1>
<img src="/assets/img/burgers.jpeg" height="150" alt="burger" class="img-thumbnail">
</div>
</div>


<div class="row">
<div  id="readyBox"class="col-lg-6">
<ul>
  {{#each burgers}}
    {{#unless devoured}}
    <li id="ready">
	    {{id}}. {{burger_name}}
	    <button class="devour" data-id="{{id}}" id="devourButton">Devour it!</button>
    </li>
    {{/unless}}
  {{/each}}
</ul>

</div>


<div id="eatenBox" class="col-lg-6">

<ul>
  {{#each burgers}}
    {{#if devoured}}
    <li id="eaten">
      {{id}}. {{burger_name}}
    </li>
    {{/if}}
  {{/each}}
</ul>

</div>
</div>

<div class="row">
  <div class="col-lg-12">
<div id="addBurger">
<form class="create-form">
  <div class="form-group">
    <input type="text" id="newburger" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>
</div>
</div>
</div>
</container>